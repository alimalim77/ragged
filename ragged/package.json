{
  "name": "ragged",
  "version": "0.4.7",
  "description": "A simple library for easy LLM access.",
  "type": "module",
  "exports": {
    "./chat/adapter": {
      "import": "./build/esm/chat/adapter/index.js",
      "require": "./build/cjs/chat/adapter/index.js",
      "types": "./build/src/public/chat/adapter/index.d.ts"
    },
    "./chat": {
      "import": "./build/esm/chat/index.js",
      "require": "./build/cjs/chat/index.js",
      "types": "./build/src/public/chat/index.d.ts"
    },
    "./tools": {
      "import": "./build/esm/tools/index.js",
      "require": "./build/cjs/tools/index.js",
      "types": "./build/src/public/tools/index.d.ts"
    }
  },
  "files": [
    "build",
    "src/**/*.d.ts"
  ],
  "scripts": {
    "build": "pnpm test && pnpm build:base",
    "build-skiptests": "pnpm build:base",
    "build:base": "rm -rf ./build && tsx build.ts && tsc --emitDeclarationOnly",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "keywords": [],
  "author": "monarchwadia",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@npmcli/package-json": "^5.1.1",
    "@pollyjs/adapter-fetch": "^6.0.6",
    "@pollyjs/adapter-node-http": "^6.0.6",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister-fs": "^6.0.6",
    "@types/jest": "^29.5.12",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.13.0",
    "@types/npmcli__package-json": "^4.0.4",
    "dotenv": "^16.4.5",
    "esbuild": "0.20.2",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.1.1",
    "prettier-2": "npm:prettier@^2",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monarchwadia/ragged.git"
  },
  "bugs": {
    "url": "https://github.com/monarchwadia/ragged/issues"
  },
  "homepage": "https://github.com/monarchwadia/ragged"
}
